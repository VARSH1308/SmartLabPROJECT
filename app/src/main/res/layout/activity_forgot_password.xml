<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ForgotPasswordActivity"
    android:background="@drawable/circle_bg">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/RelLay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ForgotPassword"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:id="@+id/Linearlay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical">

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textColor="@color/black"
                         android:text="Email"
                         android:textAllCaps="true"
                         android:fontFamily="sans-serif-light"
                         android:textSize="15sp"/>

                     <EditText
                         android:id="@+id/emailForgot"
                         android:layout_width="match_parent"
                         android:layout_height="40dp"
                         android:textSize="15sp"
                         android:textColor="@color/black"
                         android:layout_marginTop="10dp"
                         android:fontFamily="sans-serif-light"
                         android:paddingLeft="15dp"
                         android:paddingRight="15dp"
                         android:background="@drawable/et_bg1"/>


                 </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnForgotPass"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/Linearlay1"
                android:text="Change Password."
                android:background="@drawable/button_bg1"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:paddingRight="65dp"
                android:paddingLeft="65dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btnLoginPass"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/btnForgotPass"
                android:text="Login Now"
                android:background="@color/transparent"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:paddingRight="50dp"
                android:paddingLeft="50dp"
                android:layout_alignParentRight="true"
                 android:layout_marginTop="30dp"
                android:textSize="16sp" />

            <ProgressBar
                android:layout_below="@id/btnLoginPass"
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:visibility="gone"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>